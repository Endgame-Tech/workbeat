{
    "name": "workbeat-api",
    "version": "1.0.0",
    "description": "Backend API for WorkBeat Attendance Platform",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "npm install && npx prisma generate",
        "postinstall": "npx prisma generate",
        "migrate:deploy": "npx prisma migrate deploy",
        "migrate:reset": "npx prisma migrate reset --force",
        "db:seed": "node utils/seeder.js -i",
        "db:reset": "node utils/seeder.js -d",
        "production:start": "NODE_ENV=production node server.js",
        "render:build": "npm install && npx prisma generate && npx prisma migrate deploy"
    },
    "dependencies": {
        "@prisma/client": "^6.7.0",
        "@sentry/integrations": "^7.114.0",
        "@sentry/node": "^9.35.0",
        "@sentry/profiling-node": "^9.35.0",
        "@types/pg": "^8.15.4",
        "aws-sdk": "^2.1692.0",
        "axios": "^1.10.0",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "dotenv": "^16.5.0",
        "dotenv-expand": "^12.0.2",
        "express": "^4.21.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.5.1",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "node-fetch": "^2.7.0",
        "paystack-api": "^2.0.6",
        "pg": "^8.16.3",
        "socket.io": "^4.8.1",
        "sqlite3": "^5.1.7",
        "xss-clean": "^0.1.4",
        "zod": "^3.25.74"
    },
    "devDependencies": {
        "nodemon": "^2.0.22",
        "prisma": "^6.7.0"
    }
}
