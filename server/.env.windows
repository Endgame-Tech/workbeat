# Windows PostgreSQL Environment Configuration
NODE_ENV=local
PORT=5000
FRONTEND_URL=http://localhost:5173

# PostgreSQL Database Configuration (Windows)
DATABASE_URL="postgresql://workbeat_user:legend@localhost:5432/workbeat_dev?schema=public"
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=workbeat_user
POSTGRES_PASSWORD=legend
POSTGRES_DB=workbeat_dev
POSTGRES_SSL=false

# Database Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_POOL_CONNECTION_TIMEOUT=10000

# JWT Configuration (use your existing secrets or generate new ones)
JWT_SECRET=local_development_jwt_secret_for_testing_only_change_in_production
JWT_EXPIRE=24h

# Security Configuration (relaxed for local testing)
BCRYPT_ROUNDS=10
SESSION_SECRET=local_session_secret_for_testing_change_in_production
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/workbeat-local.log

# Feature Flags (enable all for testing)
ENABLE_BIOMETRIC_AUTH=true
ENABLE_FACIAL_RECOGNITION=true
ENABLE_FINGERPRINT_AUTH=true
ENABLE_GEOFENCING=true
ENABLE_TWO_FACTOR_AUTH=false

# API Settings
API_VERSION=v1
API_RATE_LIMIT_POINTS=1000
API_RATE_LIMIT_DURATION=3600

# File Upload Limits (generous for testing)
MAX_FILE_SIZE=100mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# Backup Configuration (disabled for local)
BACKUP_ENABLED=false